@model BanHang.Models.KhachHang
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>
@using (Html.BeginForm("Register", "Home", FormMethod.Post))// Chức năng , Controrller,Phương thức gửi dữ liệu lên
{
@Html.AntiForgeryToken()//Bảo mật
<div class="form-group">
    @Html.LabelFor(kh => kh.TenKhachHang, "Tên Khách Hàng:", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(kh => kh.TenKhachHang, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên" } })
        @Html.ValidationMessageFor(kh => kh.TenKhachHang, "", new { @class = "text-danger", @placeholder = "Tên" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(kh => kh.SoDienThoai, "Số điện thoại:", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(kh => kh.SoDienThoai, new { htmlAttributes = new { @class = "form-control", @placeholder = "SĐT" } })
        @Html.ValidationMessageFor(kh => kh.SoDienThoai, "", new { @class = "text-danger", @placeholder = "SĐT" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(kh => kh.Diachi, "Địa Chỉ:", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(kh => kh.Diachi, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(kh => kh.Diachi, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(kh => kh.Email, "Email:", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(kh => kh.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(kh => kh.Email, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(kh => kh.Password, " Mật Khẩu:", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(kh => kh.Password, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(kh => kh.Password, "", new { @class = "text-danger" })
    </div>
</div>
<input type="submit" value="Đăng Ký" />
}




